// Run docker build

pipeline {
    agent any
    triggers { pollSCM('* * * * *') }
    stages {
          stage("create docker image") {
            steps {
                echo " ============== start building image =================="
                dir ('Docker/toolbox') {
                	sh 'docker build -t mylitvinov/toolbox:latest . '
                echo "=============== end building image ===================="  
                }
            }
        }
    }
}